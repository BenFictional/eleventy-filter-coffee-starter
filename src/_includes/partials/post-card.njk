<li class="post-item">
      <a class="post-image" href="{{ post.url | url }}">
        {% set featuredImage = post.data.featured_image %}
        {% set featuredAlt = post.data.featured_alt %}
        {% img ''+featuredImage, ''+featuredAlt %} 
      </a>

      <div class="post-text">
        <a class="post-title" href="{{ post.url | url }}">{{ post.data.title }}</a>
        <span class="post-category {{ post.data.category }}">{{ post.data.category }}</span>
        <time class="post-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        <p class="post-description">{{ post.data.description }}</p>
      </div>
</li>